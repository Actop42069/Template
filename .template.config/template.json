{
    "$schema": "http://json.schemastore.org/template",
    "author": "Your Name",
    "classifications": ["Web", "API", "Template"],
    "identity": "Template.Project",
    "name": "Template Project",
    "shortName": "template",
    "sourceName": "Template", 
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "symbols": {
      "Framework": {
        "type": "parameter",
        "description": "The target framework for the project",
        "defaultValue": "net8.0",
        "choices": [
          { "choice": "net7.0", "description": "Target .NET 7" },
          { "choice": "net8.0", "description": "Target .NET 8" }
        ]
      }
    },
    "preferNameDirectory": true, 
    "primaryOutputs": [
      {
        "path": "Template.csproj"
      }
    ],
    "sources": [
      {
        "modifiers": [
          {
            "condition": "Framework == net7.0",
            "rename": {
              "Template.csproj": "Template.csproj"
            }
          },
          {
            "condition": "Framework == net8.0",
            "rename": {
              "Template.csproj": "Template.csproj"
            }
          }
        ]
      }
    ],
    "postActions": [
      {
        "actionId": "079e97fd-d27c-4e6b-bbd2-a60a117b2c7e",
        "description": "Restore NuGet packages required by this project.",
        "manualInstructions": [
          { "text": "Run 'dotnet restore'" }
        ],
        "continueOnError": true
      }
    ]
  }
  